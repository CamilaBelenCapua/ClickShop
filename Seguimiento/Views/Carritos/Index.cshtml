@model IEnumerable<Seguimiento.Models.Carrito>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idPrecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idTalle)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idPrecio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTalle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
