@model IEnumerable<Seguimiento.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto</h1>

<p>
    <a style="color:cornflowerblue;" asp-action="Create">Crear Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre).ToUpper()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio).ToUpper()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad).ToUpper()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.talle).ToUpper()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagen).ToUpper()
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.talle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                <a style="color:cornflowerblue;" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a style="color:cornflowerblue;" asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a style="color:cornflowerblue;" asp-action="Delete" asp-route-id="@item.id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
