@model Seguimiento.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Seguro que quieres borrar producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precio).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cantidad).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.talle).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.talle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagen).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.imagen)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="BORRAR" class="btn btn-danger" /> |
        <a style="color:cornflowerblue;" asp-action="Index">Volver al Listado</a>
    </form>
</div>
