@model IEnumerable<Seguimiento.Models.Direccion>

@{
    ViewData["Title"] = "Index";
}

<h1 class="titulo" >Index</h1>


<p>
    <a class="boton-link" asp-action="Create">Crear nueva direccion</a>
</p>
<p>
    <a class="boton-link" asp-controller="Clientes" asp-action="Create">Volver a cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.referencia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.referencia)
            </td>
            <td>
                <a class="boton-link" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a class="boton-link" asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a class="boton-link" asp-action="Delete" asp-route-id="@item.id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
