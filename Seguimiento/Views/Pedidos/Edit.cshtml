@model Seguimiento.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<h4 class="titulos_editar">Editar el pedido</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="empleadoId" />
            <input type="hidden" asp-for="clienteId" />
            <input type="hidden" asp-for="totalCompra" />
            <div class="form-group">
                <label asp-for="nroTraking" class="control-label">NRO TRACKING</label>
                <input asp-for="nroTraking" class="form-control" />
                <span asp-validation-for="nroTraking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="comentarios" class="control-label">COMENTARIOS</label>
                <textarea asp-for="comentarios" class="form-control"> </textarea>
                <span asp-validation-for="comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaEnvio" class="control-label">FECHA DE ENVIO</label>
                <input asp-for="fechaEnvio" class="form-control" />
                <span asp-validation-for="fechaEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaInicio" class="control-label">FECHA DE INICIO</label>
                <input asp-for="fechaInicio" class="form-control" />
                <span asp-validation-for="fechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label">ESTADO</label>
                <select asp-for="estado" class="form-control">
                    <option value=0>PENDIENTE</option>
                    <option value=2>PREPARADO / ADEUDA </option>
                    <option value=1>PREPARADO / PAGADO </option>
                    <option value=3>ENVIADO</option>
                    <option value=4>RECIBIDO</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="boton-link" asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
