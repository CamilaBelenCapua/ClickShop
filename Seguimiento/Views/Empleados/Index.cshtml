@model IEnumerable<Seguimiento.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<div class="imagen_superior">
    <h1 class="titulo">Empleados</h1>

    <p>
        <a class="boton-link" asp-action="Create">Crear un nuevo empleado</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="celdas">
                @Html.DisplayNameFor(model => model.nombre).ToUpper()
            </th>
            <th class="celdas">
                @Html.DisplayNameFor(model => model.apellido).ToUpper()
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    <a class="boton-link" asp-action="Edit" asp-route-id="@item.legajo">Editar</a> |
                    <a class="boton-link" asp-action="Details" asp-route-id="@item.legajo">Detalles</a> |
                    <a class="boton-link" asp-action="Delete" asp-route-id="@item.legajo">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
