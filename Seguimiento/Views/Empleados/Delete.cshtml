@model Seguimiento.Models.Empleado

@{
    ViewData["Title"] = "Delete";
}

<h3 class="titulos_borrar">¿Seguro que quieres borrar el empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.apellido).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.apellido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="legajo" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="boton-link" asp-action="Index">Volver al listado</a>
    </form>
</div>
