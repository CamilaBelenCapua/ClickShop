@model Seguimiento.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h4 class="titulos_detalles">Detalles del cliente</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.apellido).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dni).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefono).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mail).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.direccion).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.direccion)
        </dd>
    </dl>
</div>
<div>
    <a class="boton-link" asp-action="Edit" asp-route-id="@Model.dni">Editar</a> |
    <a class="boton-link" asp-action="Index">Volver al listado</a>
</div>
