@model Seguimiento.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h4 class="titulos_creacion">Ingrese sus datos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="celdas" asp-for="nombre" class="control-label, celdas">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="celdas" asp-for="apellido" class="control-label">Apellido</label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="celdas" asp-for="dni" class="control-label">Dni</label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="celdas" asp-for="telefono" class="control-label">Teléfono</label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="celdas" asp-for="mail" class="control-label">Email</label>
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="celdas" asp-for="direccion" class="control-label">dirección</label>
                <section asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <p>
                <a class = "boton-link" asp-controller="Direcciones" asp-action="Create">Crear nueva dirección</a>
            </p>
            <br />
            <div class="form-group">
                <input type="submit" value="CREAR" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="boton-link" asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
