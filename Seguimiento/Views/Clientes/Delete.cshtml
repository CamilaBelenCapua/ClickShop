@model Seguimiento.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h3 class="titulos_borrar">¿Seguro que quieres borrar el cliente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefono).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mail).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.apellido).ToUpper()
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.apellido)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="dni" />
        <input type="submit" value="BORRAR" class="btn btn-danger" /> |
        <a class="boton-link" asp-action="Index">Volver al listado</a>
    </form>
</div>
